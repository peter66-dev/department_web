@page
@model MyWeb.Pages.Managements.ResidentPosts
@{
    ViewData["Title"] = "Personal Post-Management";
    Layout = "_Layout_Managements";
}

<link rel="stylesheet" href="~/css/Management.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css" />

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>

<div class="container-fluid d-flex flex-column align-items-center">
    @*====== khi resident chưa đăng bài nào ========*@

    @*<div class="table-container d-flex align-items-center flex-column">
        <p class="text-center not-found-item">You don't have any post...</p>
        <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_etdc3qqu.json" background="transparent" speed="1" style="width: 50%; height: 50%;" loop autoplay></lottie-player>
    </div>*@

    <div class="table-container">
        <p class="manager-title">Personal Post Management</p>
        <table id="resident-post-management" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>No</th>
                    <th>Title</th>
                    <th>To group</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>1</td>
                    <td>
                        <a class="text-info text-decoration-none">
                            Chuyện ở nhà một mình chưa kể
                        </a>
                    </td>
                    <td>Hội ăn chơi</td>
                    <td><p class="stat-active">Active</p></td>
                    <td class="d-flex">
                        <a class="approve-btn">
                            <ion-icon name="eye"></ion-icon>
                            View
                        </a>
                        <a class="reject-btn">
                            <ion-icon name="trash"></ion-icon>
                            Delete
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>
                        <a class="text-info text-decoration-none">
                            Chuyện ở nhà một mình kể hôm qua
                        </a>
                    </td>
                    <td>Hội ăn chơi</td>
                    <td><p class="stat-pending">Pending</p></td>
                    <td class="d-flex">
                        <a class="approve-btn">
                            <ion-icon name="eye"></ion-icon>
                            View
                        </a>
                        <a class="reject-btn">
                            <ion-icon name="trash"></ion-icon>
                            Delete
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>
                        <a class="text-info text-decoration-none">
                            Chuyện ở nhà một mình kể hôm trước
                        </a>
                    </td>
                    <td>Hội ăn chơi</td>
                    <td><p class="stat-rejected">Rejected</p></td>
                    <td class="d-flex">
                        <a class="approve-btn">
                            <ion-icon name="eye"></ion-icon>
                            View
                        </a>
                        <a class="reason-btn">
                            <ion-icon name="help-circle"></ion-icon>
                            Reason
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#resident-post-management').DataTable();
    });
</script>
