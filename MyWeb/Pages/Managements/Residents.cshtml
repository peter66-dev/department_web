@page
@using LibraryWeb.Model
@model MyWeb.Pages.Managements.Residents
@{
    ViewData["Title"] = "Manager-Management";
    Layout = "_Layout_Managements";
}

<link rel="stylesheet" href="~/css/Management.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css" />

<div class="container-fluid">
    <div class="management-container">
        <div class="navigation">
            <p class="font-weight-bold mb-2">Menu</p>
            <ul class="mb-3">
                <a asp-page="./Posts">
                <li class="d-flex align-items-center">
                    <div class="pending-post-icon icon"></div>
                    Pending Post
                </li>
                </a>
                <a asp-page="./Residents">
                <li class="d-flex align-items-center">
                    <div class="pending-resident-icon icon"></div>
                    Pending Resident
                </li>
                </a>
            </ul>
        </div>
        @if (@Model.GroupUsers.Count == 0)
        {
            <p class="text-center not-found-item">Sorry, your groups don't have any resident's' request!</p>
            <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_etdc3qqu.json" background="transparent" speed="1" style="width: 80%; height: 80%;" loop autoplay></lottie-player>
        }
        else
        {
            <div class="table-container">
                <p class="manager-title">Pending Resident Management</p>
                <table id="resident-management" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>No</th>
                            <th>Resident name</th>
                            <th>To group</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GroupUser gu in @Model.GroupUsers)
                        {
                            int tmp = @Model.GroupUsers.ToList().IndexOf(gu) + 1;
                            <tr>
                                <td>@tmp</td>
                                <td>
                                    <a asp-page="../Users/Details" asp-route-id="@gu.MemberId" class="text-info text-decoration-none">
                                        @gu.Member.FirstName @gu.Member.LastName
                                    </a>
                                </td>
                                <td>@gu.Group.GroupName</td>
                                <td>@gu.Member.Address</td>
                                <td class="d-flex">
                                    <a asp-page="../Users/Details" asp-route-id="@gu.MemberId" class="approve-btn">
                                        <ion-icon name="checkmark-circle"></ion-icon>
                                        Approve
                                    </a>
                                    <a asp-page="../Users/Details" asp-route-id="@gu.MemberId" class="reject-btn">
                                        <ion-icon name="close-circle"></ion-icon>
                                        Reject
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function() {
        $('#resident-management').DataTable();
    });
</script>
