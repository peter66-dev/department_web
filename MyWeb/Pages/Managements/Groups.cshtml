@page
@model MyWeb.Pages.Managements.GroupsModel
@{
    ViewData["Title"] = "Groups-Management";
    Layout = "_Layout_Managements";
}

<link rel="stylesheet" href="~/css/Management.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css" />

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>


<div class="container-fluid">
    <div class="management-container">
        <div class="navigation">
            <p class="font-weight-bold mb-2">Menu</p>
            <ul class="mb-3">
                <a asp-page="Index">
                <li class="d-flex align-items-center">
                    <div class="group-manage-icon icon"></div>
                    Group Managament
                </li>
                </a>
                <a asp-page="Index">
                <li class="d-flex align-items-center">
                    <div class="user-manage-icon icon"></div>
                    User Managament
                </li>
                </a>
            </ul>
        </div>
        <div class="table-container">
            <div class="d-flex justify-content-between">
                <p class="manager-title">Groups Management</p>
                @* create group btn *@
                <a class="create-group-btn">
                    Create group
                </a>
            </div>

            <table id="group-management" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>Group name</th>
                        <th>Create date</th>
                        <th>Manager</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>1</td>
                        <td>
                            <a class="text-info text-decoration-none">
                                Hội ăn chơi
                            </a>
                        </td>
                        <td>11-05-2012</td>
                        <td>Nguyen Van A</td>
                        <td><p class="stat-active">Public</p></td>
                        <td class="d-flex">
                            <a class="approve-btn">
                                <ion-icon name="create"></ion-icon>
                                Update
                            </a>
                            <a class="reject-btn">
                                <ion-icon name="trash"></ion-icon>
                                Remove
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>
                            <a class="text-info text-decoration-none">
                                Hội đua xe
                            </a>
                        </td>
                        <td>11-05-2012</td>
                        <td>Nguyen Van ABC</td>
                        <td><p class="stat-pending">Private</p></td>
                        <td class="d-flex">
                            <a class="approve-btn">
                                <ion-icon name="create"></ion-icon>
                                Update
                            </a>
                            <a class="reject-btn">
                                <ion-icon name="trash"></ion-icon>
                                Remove
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#group-management').DataTable();
    });
</script>
