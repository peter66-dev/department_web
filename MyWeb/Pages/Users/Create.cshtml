@page
@model MyWeb.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout_Register";

}

<link rel="stylesheet" href="~/css/CRUD.css" />

<div class="container-fluid w-50 register-container">
    <h2 class="text-center font-weight-bold" style="font-size: 38px; margin-bottom: 20px">
        Joining to FDepartment
    </h2>
    <p class="text-center" style="font-size: 20px; margin-bottom: 40px">A trustworthy place to manage <span class="text-primary">News</span> and <span class="text-primary">Posts</span></p>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="d-flex justify-content-between">
            <div class="form-group d-flex flex-column">
                <label asp-for="User.FirstName" class="control-label mb-2 normal-label"></label>
                <span asp-validation-for="User.FirstName" class="text-danger mb-2"></span>
                <input asp-for="User.FirstName" class="form-control" />
            </div>
            <div class="form-group d-flex flex-column">
                <label asp-for="User.LastName" class="control-label mb-2 normal-label"></label>
                <span asp-validation-for="User.LastName" class="text-danger mb-2"></span>
                <input asp-for="User.LastName" class="form-control" />
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group d-flex flex-column">
                <label asp-for="User.Password" class="control-label mb-2 normal-label"></label>
                <span asp-validation-for="User.Password" class="text-danger mb-2"></span>
                <input asp-for="User.Password" class="form-control" type="password" />
            </div>
            <div class="form-group d-flex flex-column">
                <label class="control-label mb-2 normal-label">Confirm password</label>
                <span asp-validation-for="User.Avatar" class="text-danger mb-2"></span>
                @if (@ViewData["ConfirmPasswordMessage"] != null)
                {
                    <span class="text-danger mb-2">
                        @ViewData["ConfirmPasswordMessage"]
                    </span>
                }
                <input asp-for="User.Avatar" class="form-control" type="password" />
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group d-flex flex-column">
                <label asp-for="User.PhoneNumber" class="control-label mb-2 normal-label"></label>
                <span asp-validation-for="User.PhoneNumber" class="text-danger mb-2"></span>
                @if (@ViewData["PhoneMessage"] != null)
                {
                    <span class="text-danger">@ViewData["PhoneMessage"]</span>
                }
                <input asp-for="User.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group d-flex flex-column">
                <label asp-for="User.Address" class="control-label mb-2 normal-label"></label>
                <span asp-validation-for="User.Address" class="text-danger mb-2"></span>
                <input asp-for="User.Address" class="form-control" />
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group">
                <label class="form-check-label mb-2 normal-label">Gender</label>
                <select asp-for="User.Gender" class="form-control">
                    <option value="true">
                        Male
                    </option>
                    <option value="false">
                        Female
                    </option>
                </select>
            </div>
            <div class="form-group d-flex flex-column">
                <label asp-for="User.Email" class="control-label mb-2 normal-label"></label>
                <span asp-validation-for="User.Email" class="text-danger mb-2"></span>
                @if (@ViewData["EmailMessage"] != null)
                {
                    <span class="text-danger mb-2">
                        @ViewData["EmailMessage"]
                    </span>
                }
                <input asp-for="User.Email" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create account" class="btn btn-primary w-100 p-2 mt-3" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }