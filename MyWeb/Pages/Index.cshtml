@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="~/css/Index.css" />

<div class="my-index container-fluid">

    <div class="left-content">
        <p class="font-weight-bold mb-2">Menu</p>
        <ul class="mb-5">
            <a href="/">
            <li class="d-flex align-items-center">
                <div class="home-icon icon"></div>
                Home
            </li>
            </a>

            <a href="/">
            <li class="d-flex align-items-center">
                <div class="anounce-manage-icon icon"></div>
                Create Anouncement
            </li>
            </a>

            <a href="/">
            <li class="d-flex align-items-center">
                <div class="user-manage-icon icon"></div>
                User Managament
            </li>
            </a>

            <a href="/">
            <li class="d-flex align-items-center">
                <div class="post-manage-icon icon"></div>
                Create Post
            </li>
            </a>

        </ul>
        <p class="font-weight-bold mb-2">Groups</p>
        <ul class="mb-3">
            <a href="/">
            <li class="d-flex align-items-center">
                <div class="group-icon icon"></div>
                Group A
            </li>
            </a>

        </ul>
    </div>
    <div class="mid-content ">
        <p class="font-weight-bold mb-2">Latest</p>

        <div class="news news1">
            <div class="owner">
                <img src="~/img/user.png" />
                <div class="infos">
                    <div class="flex-text">
                        <p class="name">Phan Minh Nhut</p>
                        <ion-icon name="caret-forward-outline"></ion-icon>
                        <p class="name">Chung Cư Khu B</p>
                    </div>
                    <div class="flex-textt">
                        <p class="date">Jun 20 6:43 PM</p>
                        <img src="~/img/group.png"/>
                    </div>
                </div>
            </div>
            <div class="news-body">
                <div class="title">
                    <a asp-page="./PostDetail">Bản tin thông báo cho khu B nhà dưới lòng đất.</a>
                </div>
                <div class="tags">
                    <p class="tag">#chungcu</p>
                    <p class="tag">#longdat</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                    <p class="tag">#canho</p>
                </div>
                <div class="react">
                    <div class="likes">
                        <button>
                            <ion-icon name="heart-outline"></ion-icon>
                        </button>
                        <p>20 Likes</p>
                    </div>
                    <div class="comments">
                        <button>
                            <ion-icon name="chatbox-ellipses-outline"></ion-icon>
                        </button>
                        <p>5 Comments</p>
                    </div>
                    <div class="views">
                        <ion-icon name="eye-outline"></ion-icon>
                        <p>20</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="right-content">
        <div class="hownews-top d-flex justify-content-between">
            <p class="font-weight-bold mb-2">Hot News</p>
        </div>
        <div class="list-body">
            <div class="hotn hotn1">
                <h1 class="title">
                    Thông báo cúp điện nguyên ngày!
                </h1>
                <p class="time">Jun 27</p>
            </div>
            <div class="hotn hotn2">
                <h1 class="title">
                    Sửa chửa hệ thống nước ngầm ở khu A
                </h1>
                <p class="time">Oct 2</p>
            </div>
            <div class="hotn hotn3">
                <h1 class="title">
                    Cập nhật giá xăng cộ
                </h1>
                <p class="time">Jun 27</p>
            </div>
            <div class="hotn hotn4">
                <h1 class="title">
                    Thông báo tìm trẻ lạc...
                </h1>
                <p class="time">May 15</p>
            </div>
        </div>
    </div>

</div>
