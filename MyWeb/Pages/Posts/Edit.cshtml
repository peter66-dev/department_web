@page
@model MyWeb.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/CRUD.css" />
<script src="https://cdn.tiny.cloud/1/pyapdqq1dyb1bd234vpnlt6ssc4x4i0ii786ea6y1tz9wypw/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>tinymce.init({ selector: 'textarea' });</script>

<div class="container-fluid">

    <div class="edit-post-container">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Post.PostId" />
                <div class="form-group">
                    <label asp-for="Post.UserPostId" class="control-label"></label>
                    <select asp-for="Post.UserPostId" class="form-control" asp-items="ViewBag.UserPostId"></select>
                    <span asp-validation-for="Post.UserPostId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.GroupPostId" class="control-label"></label>
                    <select asp-for="Post.GroupPostId" class="form-control" asp-items="ViewBag.GroupPostId"></select>
                    <span asp-validation-for="Post.GroupPostId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.PostTypeId" class="control-label"></label>
                    <select asp-for="Post.PostTypeId" class="form-control" asp-items="ViewBag.PostTypeId"></select>
                    <span asp-validation-for="Post.PostTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.Title" class="control-label"></label>
                    <input asp-for="Post.Title" class="form-control" />
                    <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.PostContent" class="control-label"></label>
                    <input asp-for="Post.PostContent" class="form-control" />
                    <span asp-validation-for="Post.PostContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.CreatedDate" class="control-label"></label>
                    <input asp-for="Post.CreatedDate" class="form-control" />
                    <span asp-validation-for="Post.CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.LastModified" class="control-label"></label>
                    <input asp-for="Post.LastModified" class="form-control" />
                    <span asp-validation-for="Post.LastModified" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.Status" class="control-label"></label>
                    <select asp-for="Post.Status" class="form-control" asp-items="ViewBag.Status"></select>
                    <span asp-validation-for="Post.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index"><ion-icon name="arrow-back-outline"></ion-icon> Go Back</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
